@model EditPizzaViewModel

<h2>Edit Pizza</h2>

<div class="mx-auto" style="max-width:600px;">
    <form enctype="multipart/form-data" asp-action="EditPizza" asp-controller="Pizza" method="post">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>

        <div class="form-group">
            <label class="control-label mt-3">Ingredients</label>
            <div class="checkbox-group border p-2">
                @foreach (var ingredient in Model.Ingredients)
                {
                    <div>
                        <label>
                            <input type="checkbox" name="SelectedIngredients" value="@ingredient.Id"
                                   @(Model.SelectedIngredients.Contains(ingredient.Id) ? "checked" : "") />
                            @ingredient.Name
                        </label>
                    </div>
                }
            </div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Photo"></label>
            <input asp-for="Photo" type="file" class="form-control-file" />
            <span asp-validation-for="Photo"></span>
        </div>
        <button class="btn btn-success">Save</button>
    </form>
</div>