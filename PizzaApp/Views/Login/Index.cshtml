@{
}
@model Admin

    <h2>Login Screen</h2>

    <form style="max-width:600px; margin:auto;" asp-action="Index" asp-controller="Login" method="post">
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input class="form-control" type="text" asp-for="UserName" />
            <span class="alert-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label class="mt-4" asp-for="Password">Password</label>
            <input class="form-control" type="password" asp-for="Password" />
            <span class="alert-danger" asp-validation-for="Password"></span>
        </div>
        <button class="btn btn-success mt-4" type="submit">Login</button>
    </form>